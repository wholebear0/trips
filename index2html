<script>
function redirectDevice(){

  const isMobile = window.innerWidth <= 768;

  if(isMobile){
    // Mobile → GitHub mobile page
    window.location.replace("https://afresh2193.github.io/googlesite/mobile.html");
  } else {
    // Desktop → Google Site
    window.location.replace("https://sites.google.com/view/wholebear");
  }

}

redirectDevice();
</script>

